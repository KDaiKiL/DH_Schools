<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DH_Schools</title>
    <link rel="stylesheet" href="/css/stylesheet.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-uWxY/CJNBR+1zjPWmfnSnVxwRheevXITnMqoEIeG1LJrdI0GlVs/9cVSyPYXdcSF" crossorigin="anonymous">
</head>

<body>

    <header>
        <div>
            
        </div>
    </header>

    <main>
        <div class="container">

            <a href="/aluno/cadastro" style="margin-bottom: 15px;">
                <button class="novoAluno">Cadastrar um novo aluno</button>
            </a>

            <p>
                <table class="table table-dark table-striped">
                    <thead>
                      <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Sobrenome</th> 
                        <th scope="col">Ano da matricula</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delet</th>
                      </tr>
                    </thead>
                    <tbody>
                            <% alunos.forEach(element => { %>
                                <tr>
                                    <td> <%= element.id %> </td>
                                    <td> <%= element.nome %> </td>
                                    <td> <%= element.sobrenome %> </td>
                                    <td> <%= element.ano_matricula %> </td>
                                    <td>
                                        <a href="/aluno/<%= element.id %>/edit">
                                            <button>Editar Aluno</button>
                                        </a>
                                    </td>
                                    <td>
                                        <form action="/aluno/<%= element.id %>/delete?_method=DELETE" method="post">
                                            <button type="submit" class="deleteAluno">Deletar aluno</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %> 
                    </tbody>
                </table>
            </p>
        </div>
    </main>

</body>

</html>